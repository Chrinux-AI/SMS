# Attendance AI - Apache Configuration

# Set default index file
DirectoryIndex index.php index.html

# Enable Rewrite Engine
RewriteEngine On

# Redirect old auth URLs to new location
RewriteRule ^login\.php$ auth/login.php [L]
RewriteRule ^register\.php$ auth/register.php [L]
RewriteRule ^logout\.php$ auth/logout.php [L]
RewriteRule ^forgot-password\.php$ auth/forgot-password.php [L]
RewriteRule ^reset-password\.php$ auth/reset-password.php [L]
RewriteRule ^verify-email\.php$ auth/verify-email.php [L]

# Disable directory browsing
Options -Indexes

# Protect sensitive directories
<FilesMatch "\.(md|sql|sh|py|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect setup directory (use Files instead of Directory in .htaccess)
# For complete protection, configure this in Apache's main config or VirtualHost
RedirectMatch 403 ^/_setup/.*$

# Custom 404 Error Page
ErrorDocument 404 /attendance/404.php

# Performance Optimizations
# Enable GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    <FilesMatch "\.(ico|jpg|jpeg|png|gif|webp|svg|css|js)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
    <FilesMatch "\.(html|htm|php)$">
        Header set Cache-Control "max-age=0, must-revalidate"
    </FilesMatch>
</IfModule>
